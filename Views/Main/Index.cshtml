@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IndexModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
        body {
            background-color: lightyellow;
            font-size: 18px;
            text-align: center;
            padding-top: 50px;
        }

        table {
            width: 80%;
            margin: 0 auto;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        a {
            text-decoration: none;
            color: blue;
        }

            a:hover {
                color: darkblue;
            }

        input[type="submit"] {
            padding: 8px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 4px;
        }

            input[type="submit"]:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <h2>List of Users</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Age</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>
                    <a asp-action="Edit" asp-controller="Main" asp-route-id="@item.Id">Change</a>
                </td>
                <td>
                    <form asp-controller="Main" asp-action="Delete" method="post" asp-route-id="@item.Id">
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
        }
    </table>
    <p><a asp-action="Create" asp-controller="Main">Add User</a></p>

    <h2>List of Companies</h2>
    <table>
        <tr>
            <th>Company Name</th>
            <th>Number of Employees</th>
        </tr>
        @foreach (var item in Model.Companies)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Employees</td>
            </tr>
        }
    </table>
</body>
</html>